{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "lib": ["es2022", "DOM"],
      "module": "commonjs",
      "target": "es2022",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "lib"
    },
    "include": ["src/**/*"]
  }